#!/bin/sh

skip_perm="$1"

dir=html
if [ ! -d $dir ]
then
	echo "Missing '$dir'" 1>&2
	exit 1
fi

if [ -z "$skip_perm" ]
then
    echo fixing ownership of files...
    find $dir -type f -exec chmod +r {} \;

    echo fixing ownership of directories...
    find $dir -type d -exec chmod +xr {} \;
fi

echo "Ready to rsync website ('n' to skip)?"
read pauseme
if [ -z "$pauseme" ]
then
    rsync --delete --size-only  -e ssh -avz html/ gabrielx@addr11.addr.com:~/public_html/scramble
fi

echo "Ready to backup data?"
read pauseme
if [ -z "$pauseme" ]
then
    rsync --size-only  -e ssh -avz . gabrielx@addr11.addr.com:~/website-data --exclude $dir --exclude '*~'
fi