#!/bin/sh

dir=html
if [ ! -d $dir ]
then
	echo "Missing '$dir'" 1>&2
	exit 1
fi

echo fixing ownership of files...
find $dir -type f -exec chmod +r {} \;

echo fixing ownership of directories...
find $dir -type d -exec chmod +xr {} \;

echo "Ready to rsync website ('n' to skip)?"
read pauseme
if [ "$pausme" != "n" ]
then
    rsync --delete --size-only  -e ssh -avz html/ gabrielx@addr6.addr.com:~/public_html/scramble
fi

echo "Ready to backup data?"
read pauseme
rsync --size-only  -e ssh -avz . gabrielx@addr6.addr.com:~/website-data --exclude images --include images.xml --exclude $dir --exclude '*~'
