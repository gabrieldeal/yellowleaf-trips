#!/usr/bin/env perl

use strict;

use lib './perl/lib';

use Carp ();
use Scramble::Ingestion::Trip ();

local $SIG{__WARN__} = sub { Carp::confess "DIEING on warning: @_" };
local $SIG{__DIE__}  = sub { Carp::confess "DIEING: @_" };

my $subdir = shift @ARGV;

exit(Scramble::Ingestion::Trip::make_xml($subdir, @ARGV));

