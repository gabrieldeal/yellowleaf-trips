#!/usr/bin/env bash
umask 022

# PERL5OPT="-d:NYTProf"

# To get line coverage:
# rm -rf cover_db && PERL5OPT=-MDevel::Cover bin/build && cover && cp -r /home/vagrant/projects/yellowleaf-trips/cover_db /vagrant/
# file:///C:/Users/Gabriel/projects/personal-environment/vagrant/ubuntu-16.04/cover_db/coverage.html

data_dir="/home/gabrielx/projects/yellowleaf-trips-data/"
dir="$(dirname "$0")/.."
cd "$dir" \
    && perl bin/parse \
	    --data-directory "$data_dir" \
	    --reports-directory "$data_dir/reports/" \
	    --output-directory "$data_dir/html" \
	    -v \
	    "$@"
