    && perl bin/parse \
	    --dictionary-dir dict \
	    --data-directory "$output_dir/data/" \
	    --images-directory "$output_dir/data/gabrielx/reports/" \
	    --out "$output_dir/html" \
	    -v \
	    "$@"
