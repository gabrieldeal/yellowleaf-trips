#!/usr/bin/env bash
umask 022

# To run the debugger:
# Put $DB::single=1; where you want to break.
# PERL5OPT="-d" bin/build

# To get line coverage:
# rm -rf cover_db && PERL5OPT=-MDevel::Cover bin/build && cover && ls -l cover_db

data_dir="/home/gabrielx/projects/yellowleaf-trips-data"
dir="$(dirname "$0")/.."
cd "$dir" \
    && perl bin/parse \
	    --data-directory "$data_dir" \
	    --trips-directory "/media/gabrielx/Backup/Users/Gabriel/projects/yellowleaf-trips/data/gabrielx/reports" \
	    --output-directory "$data_dir/html" \
	    -v \
	    "$@"
