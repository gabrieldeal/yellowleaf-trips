#!/usr/bin/env bash
umask 022

# RAW, JPG, and GPX:
files_src_dir="/media/gabrielx/Backup/Users/Gabriel/projects/yellowleaf-trips/data/gabrielx/reports"

# areas.xml, locations/*.xml, trips/*.xml, dictionary, etc:
xml_src_dir="/home/gabrielx/projects/yellowleaf-trips-data"

# HTML, CSS, JS, KML, images, etc:
output_dir="$xml_src_dir/html"

cd "$(dirname "$0")/.."
code_dir="$PWD"

perl bin/parse \
     --code-directory "$code_dir" \
     --xml-src-directory "$xml_src_dir" \
     --files-src-directory "$files_src_dir" \
     --output-directory "$output_dir" \
     -v \
     "$@"
