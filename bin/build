#!/usr/bin/perl
#-*-perl-*-

use strict;
use lib './perl/lib';

use Carp ();
use Data::Dumper ();
use Scramble::Build ();
use Scramble::Misc qw(get_options snake_case_keys);

local $^W = 1;
local $| = 1;
local $SIG{__WARN__} = sub { Carp::confess "DIEING on warning: @_" };
local $SIG{__DIE__}  = sub { Carp::confess "DIEING: @_" };
$ENV{NODE_ENV} ||= 'production';
local $Data::Dumper::Maxdepth = 5;

my @options = qw(
    code-directory=s
    xml-src-directory=s
    timezone=s
    verbose
    action=s@
    skip=s@
    file=s@
    files-src-directory=s
    kml-directory=s
    site-root=s
    templates-directory=s
    javascript-directory=s
    output-directory=s
    help
    );
my %defaults = (
    "code-directory" => "/home/gabrielx/projects/yellowleaf-trips",
    "files-src-directory" => "/media/gabrielx/Backups/Users/Gabriel/d/Pictures/yellowleaf-trips",
    "file" => [],
    "action" => [],
    "skip" => [],
    "timezone" => "PDT",
    "kml-directory" => "kml",
    "site-root" => "yellowleaf.org/scramble",
    "templates-directory" => "view",
    "javascript-directory" => "javascript/dist",
    "xml-src-directory" => "/home/gabrielx/projects/yellowleaf-trips-data",
    );
my @required = qw(
    code-directory
    files-src-directory
    javascript-directory
    templates-directory
    xml-src-directory
    );

my %options = Scramble::Misc::get_options(defaults => \%defaults,
                                          options => \@options,
                                          required => \@required);
%options = snake_case_keys(%options);

if (! $options{output_directory}) {
    $options{output_directory} = "$options{xml_src_directory}/html";
}

Scramble::Build->new(%options)->create;

exit 1;
